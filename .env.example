# Google Gemini API Key - REQUIRED for LLM functionality
# Obtain at https://aistudio.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Gemini Model Name (e.g., gemini-1.5-flash, gemini-1.0-pro)
GEMINI_MODEL_NAME=gemini-1.5-flash

# Performance Settings
MAX_CONTEXT_MESSAGES=10
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.7

# Audio Settings
SAMPLE_RATE=16000
RECORDING_DURATION=5
# To specify a microphone, run 'python list_microphones.py' and set the device ID here.
# Example: AUDIO_INPUT_DEVICE=1
AUDIO_INPUT_DEVICE=

# Data Paths
PROGRAMS_DATA_PATH=data/programs
CONFIG_PATH=config/content_index.yaml

# Logging
LOG_LEVEL=INFO

# Response Caching
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=3600
MAX_CACHE_SIZE=1000
CACHE_SIMILARITY_THRESHOLD=0.85